<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans                http://www.springframework.org/schema/beans/spring-beans.xsd                               http://camel.apache.org/schema/spring                      http://camel.apache.org/schema/spring/camel-spring.xsd">
    <camelContext id="camel" xmlns="http://camel.apache.org/schema/spring">
        <route id="_route1">
            <from id="_from1" uri="kafka:{{kafka.topic}}?brokers={{kafka.brokers}}"/>
            <log id="_log1" message=">>>> Escuchando kafka con camel >>>>>>> ${body}"/>
            <log id="_log4" message=">>>> Try Insert MongoDB >>>>>>> ${body}"/>
            <!--             <to id="_to1" uri="mongodb:myDb?database=smpledb&amp;collection=clientes&amp;operation=insert"/> -->
            <log id="_log2" message=">>>> After Insert MongoDB >>>>>>> ${body}"/>
            <!--             <to id="_to2" uri="mongodb:myDb?database=smpledb&amp;collection=clientes&amp;operation=findAll"/> -->
            <log id="_log3" message=">>>> FindAll MongoDB >>>>>>> ${body}"/>
        </route>
    </camelContext>
    
    
    <bean id="mongoTemplate" class="org.springframework.data.document.mongodb.MongoTemplate">
        <constructor-arg name="mongo" ref="mongo"/>
        <constructor-arg name="databaseName" value="sampledb"/>
    </bean>
    <bean class="com.mongodb.MongoURI" id="mongoUri">
        <constructor-arg value="mongodb://mongodb:mongodb@172.30.21.225:27017"  />
    </bean>
    <bean class="com.mongodb.Mongo" id="mongo">
        <constructor-arg ref="mongoUri" />
    </bean>
</beans>
