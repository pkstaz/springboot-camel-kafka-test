<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans       http://www.springframework.org/schema/beans/spring-beans.xsd              http://camel.apache.org/schema/spring             http://camel.apache.org/schema/spring/camel-spring.xsd">
    
    
    
    
    <bean class="com.mongodb.Mongo" id="myDb">
        <constructor-arg index="0">
            <bean class="com.mongodb.MongoURI">
                <constructor-arg index="0" value="mongodb://${mongo.user}:${mongo.pass}@${mongo.url}:${mongo.port}/db"/>
            </bean>
        </constructor-arg>
    </bean>
    <bean class="org.apache.camel.component.mongodb.MongoDbComponent" id="mongodb"/>
    
    
    
    
    
    <camelContext id="camel" xmlns="http://camel.apache.org/schema/spring">
        <route id="_route1">
            <from id="_from1" uri="kafka:${kafka.topic}?brokers=${kafka.brokers}"/>
            <log id="_log1" message=">>>> Escuchando kafka >>>>>>> ${body}"/>
            <to id="_to1" uri="mongodb:myDb?database=${mongo.dbname}&amp;operation=insert&amp;collection=${mongo.collection}"/>
            <log id="_log2" message=">>>> After Insert MongoDB >>>>>>> ${body}"/>
            <to id="_to2" uri="mongodb:myDb?database=${mongo.dbname}&amp;collection=${mongo.collection}&amp;operation=findAll"/>
            <log id="_log3" message=">>>> FindAll MongoDB >>>>>>> ${body}"/>
        </route>
    </camelContext>
</beans>
